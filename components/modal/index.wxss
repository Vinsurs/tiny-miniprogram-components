
.modal {
  background-color: #ffffff;
  position: fixed;
  left: 50%;
  top: 50%;
  border-radius: 16rpx;
  transform: scale(0) translate(-50%, -50%);
  box-sizing: border-box;
  min-width: 360rpx;
}
.modal .modalHeader {
  height: 132rpx;
  box-sizing: border-box;
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.modal .modalHeader .modalTitle {
  color: #393939;
  font-size: 36rpx;
  font-weight: 700;
}
.modal .modalHeader .modalClose {
  font-size: 24rpx;
  color: #DDDDDD;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}