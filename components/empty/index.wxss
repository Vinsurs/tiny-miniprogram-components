.empty {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.image {
  display: block;
  width: 112rpx;
}
.description {
  color: #999999;
  font-size: 28rpx;
  margin-top: 32rpx;
}
.action-button {
  color: #666666;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  height: 80rpx;
  border-radius: 40rpx;
  border: 2rpx solid #DDD;
  padding-left: 80rpx;
  padding-right: 80rpx;
  margin-top: 80rpx;
}
